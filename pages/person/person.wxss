/* pages/person/person.wxss */
page{
  height: 100%;
}
.person{
  height: 100%;
}
/* 头像 */
.person-header{
  height: 300rpx;
  position: relative;
  background-color: #D2A264;
}
.header-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  color: #fff;
  position: absolute;
  top:50%;
  left:30rpx;
  transform: translateY(-50%);
  line-height: 120rpx;
  text-align: center;
}
.avatarImg{
  width: 100%;
  height: 100%;
  font-size: 120rpx;
  border-radius:50%;
}
.person-info{
  height: 100rpx;
  width: 75%;
  position: absolute;
  top:50%;
  right:20rpx;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: white;
}
.person-nickname{
  font-size: 1.2rem;
}
.person-wxid{
 font-size: 0.8rem;
}
/* 订单 */
.person-order{
  margin-top: 20rpx;
  height: 500rpx;
  font-size: 1rem;
}
