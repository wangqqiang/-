}
.faColor{
  color: #D2A264;
}
.wallet{
  border: 0rpx;
}
/* 登录按钮 */
.person-login{
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #D2A264;
}
