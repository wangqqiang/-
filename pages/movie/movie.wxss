/* pages/movie/movie.wxss */
.movieList{
  display: flex;
  flex-direction:row;
  padding:15rpx;
  border-bottom: 1px solid rgb(212, 212, 212);
}
.movie_title{
  padding: 0 15rpx 15rpx 15rpx;
}
.mapName{
  padding: 0 30rpx;
  height:35rpx;
  line-height: 35rpx;
  width: 80%;
  font-size: 0.9rem;
  display: inline-block;
  white-space:nowrap;
  overflow: hidden;
}
.jianto{
  font-size: 1.3rem;
  float: right;
}
/* 轮播 */
swiper{
  width: 100%;
  height: 200rpx;
}
.slide-image{
  width: 100%;
  height: 200rpx;
}
/* 列表 */
.listImg{
  flex: 1 0 20%;
  height: 250rpx;
}
.flex-item{
  padding: 20rpx 0;
  font-size: 35rpx;
  color: rgb(175, 170, 170)
}
.listRight{
  flex: 1 0 80%;
  display: flex;
  flex-direction:row;
}
.xiangxi{
  width: 400rpx;
  display: flex;
  padding:0 30rpx;
  flex-direction:column;
}
.movieName{
  color: black;
}
.actor{
  width: 100%;
  height: 30rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.gopiao{
  width: 30%;
  display: flex;
  position: relative;
  flex-direction:column;
}
.score{
  text-align: right;
  color:rgb(199, 181, 81);
}
.gopiaobj{
  height: 60rpx;
  width: 100%;
  position: absolute;
  bottom: 10rpx;
  left:0;
  text-align: center;
  background-color: rgb(199, 181, 81);
  border-radius: 25rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color:white;
}