/* pages/details/details.wxss */
page{
  height: 100%;
}
.details{
  height: 100%;
  width: 100%;
  background-color: rgb(238, 237, 237);
}
/* 简介 */
.dSynopsis{
  width: 100%;
  height: 400rpx;
  margin-bottom: 15rpx;
  background-color: #fff;
  position:relative;
}
.padding10{
  padding:20rpx;
}
.dSynopsis-centent{
  height: 100%;
  width: 95%;
  position: absolute;
  top:0;
  left:0;
}
.dSynopsis-img{
  height: 150rpx;
  position:relative;
  filter: blur(0.2rem);
}
.dSynopsisImg{
  background-size: cover;
  width: 100%;
  height: 100%;
}
